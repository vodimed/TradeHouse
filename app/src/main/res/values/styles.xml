<resources>
    <style name="AppTheme"> <!--parent="android:Theme"-->
        <!--https://developer.android.com/guide/topics/manifest/activity-element-->
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>

        <item name="android:colorBackground">@android:color/holo_orange_light</item>
        <item name="android:disabledAlpha">0.5</item>

        <item name="android:textViewStyle">@style/Widget.TextView</item>
        <item name="android:editTextStyle">@style/Widget.EditText</item>
        <item name="android:checkboxStyle">@style/Widget.CheckBox</item>
        <item name="android:switchStyle">@style/Widget.Switch</item>
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner</item>
        <item name="android:listViewStyle">@style/Widget.ListView</item>
    </style>

    <style name="Widget" parent="android:Widget.DeviceDefault">
    </style>

    <style name="Widget.TextView" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Widget.EditText" parent="android:Widget.DeviceDefault.EditText">
    </style>

    <style name="Widget.CheckBox" parent="android:Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Widget.Switch" parent="android:Widget.Material.CompoundButton.Switch">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Widget.Button" parent="android:Widget.DeviceDefault.ImageButton">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@android:drawable/btn_default_small</item>
        <item name="android:paddingStart">@dimen/zero_padding</item>
        <item name="android:paddingEnd">@dimen/zero_padding</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget.DeviceDefault.Button.Toggle">
    </style>

    <style name="Widget.Spinner" parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="Widget.ListView" parent="android:Widget.DeviceDefault.ListView">
        <item name="android:listSelector">@android:color/holo_green_light</item>
    </style>

    <style name="Widget.Button.MainMenu">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/main_padding</item>
        <item name="android:paddingEnd">@dimen/main_padding</item>
        <item name="android:drawablePadding">@dimen/main_spacing</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>