<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonInvoices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/main_pagging"
        android:drawablePadding="@dimen/main_spacing"
        android:textStyle="bold"
        android:textSize="@dimen/main_textsize"
        android:text="@string/mainmenu_invoices"
        android:drawableLeft="@android:drawable/gallery_thumb" />
    <Button
        android:id="@+id/buttonInventories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/main_pagging"
        android:drawablePadding="@dimen/main_spacing"
        android:textStyle="bold"
        android:textSize="@dimen/main_textsize"
        android:text="@string/mainmenu_inventories"
        android:drawableLeft="@android:drawable/gallery_thumb" />
    <Button
        android:id="@+id/buttonPricecontrol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/main_pagging"
        android:drawablePadding="@dimen/main_spacing"
        android:textStyle="bold"
        android:textSize="@dimen/main_textsize"
        android:text="@string/mainmenu_pricecontrol"
        android:drawableLeft="@android:drawable/gallery_thumb" />
    <Button
        android:id="@+id/buttonDictionaries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/main_pagging"
        android:drawablePadding="@dimen/main_spacing"
        android:textStyle="bold"
        android:textSize="@dimen/main_textsize"
        android:text="@string/mainmenu_dictionaries"
        android:drawableLeft="@android:drawable/gallery_thumb" />
    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/main_pagging"
        android:drawablePadding="@dimen/main_spacing"
        android:textStyle="bold"
        android:textSize="@dimen/main_textsize"
        android:text="@string/mainmenu_settings"
        android:drawableLeft="@android:drawable/gallery_thumb" />
</LinearLayout>