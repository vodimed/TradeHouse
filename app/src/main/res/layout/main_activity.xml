<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonInvoices"
        android:theme="@style/Widget.Button.MainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/main_1_wb"
        android:text="@string/mainmenu_invoices" />
    <Button
        android:id="@+id/buttonInventories"
        android:theme="@style/Widget.Button.MainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/main_2_inv"
        android:text="@string/mainmenu_inventories" />
    <Button
        android:id="@+id/buttonPricecontrol"
        android:theme="@style/Widget.Button.MainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/main_3_price"
        android:text="@string/mainmenu_pricecontrol" />
    <Button
        android:id="@+id/buttonDictionaries"
        android:theme="@style/Widget.Button.MainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/main_4_upd"
        android:text="@string/mainmenu_dictionaries" />
    <Button
        android:id="@+id/buttonSettings"
        android:theme="@style/Widget.Button.MainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/main_5_settings"
        android:text="@string/mainmenu_settings" />
</LinearLayout>